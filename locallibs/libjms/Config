#!/bin/sh 

if [ "$LOCALCC" = "" ] ; then
	LOCALCC=gcc
fi
if [ "$LOCALCXX" = "" ] ; then
	LOCALCXX=g++
fi

CC=$LOCALCC
CXX=$LOCALCXX
CFLAGS=$LOCALCFLAGS

if [ "$1" = "-f" ] ; then
     echo "skip -f option"
     shift
fi
if [ "$1" = "-shared" ] ; then
     shift
     shared_mode="--enable-shared --disable-static"
fi


libtlg_xp_flags=''
if [ "$XP_TESTING" ]; then
    libtlg_xp_flags='--enable-xp-testing'
fi
pwd
set -x
autoreconf --force --install && ./configure --silent CC="$CC" CXX="$CXX" CFLAGS="$CFLAGS" CXXFLAGS="$CFLAGS" $libtlg_xp_flags $WITH_BOOST $shared_mode "$@"

